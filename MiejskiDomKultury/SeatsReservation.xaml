<Page x:Class="MiejskiDomKultury.SeatsReservation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SeatsReservation">

    <Grid Margin="10">
        <Label x:Name="Screen" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="0,0,0,20">Ekran</Label>
        <UniformGrid x:Name="SeatsGrid" Rows="10" Columns="10" Margin="10,50,10,10" />
        <Button x:Name="ConfirmButton"
        Content="Przejdź do płatności"
        Width="150"
        Height="40"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,10,10"
        Click="ConfirmButtonClick"/>
        
    </Grid>

</Page>
