<Page x:Class="MiejskiDomKultury.Rejestracja"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rejestracja">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Formularz rejestracji" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,20" HorizontalAlignment="Center" Width="400">
            <Label Content="Imię:"/>
            <TextBox x:Name="ImieTextBox"/>

            <Label Content="Nazwisko:"/>
            <TextBox x:Name="NazwiskoTextBox"/>

            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox"/>

            <Label Content="Nazwa użytkownika:"/>
            <TextBox x:Name="NazwaUzytkownikaTextBox"/>

            <Label Content="Hasło:"/>
            <PasswordBox x:Name="HasloPasswordBox"/>

            <Label Content="Powtórz hasło:"/>
            <PasswordBox x:Name="SecondHasloPasswordBox"/>





            <Button Content="Zarejestruj" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Zarejestruj_Click"/>
        </StackPanel>
    </Grid>
</Page>
