<Page x:Class="MiejskiDomKultury.Success"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Sukces">

    <Grid >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource sukces}"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Green"
                       TextAlignment="Center"
                       Margin="20" />

            <TextBlock Text="{DynamicResource info}"
                       FontSize="16"
                       TextAlignment="Center"
                       Margin="10,0,10,20"
                       TextWrapping="Wrap" />

            <Button Content="{DynamicResource gohome}"
                    Width="250"
                    Height="50"
                    FontSize="16"
                    Click="BackToHome_Click" />
        </StackPanel>
    </Grid>
</Page>
