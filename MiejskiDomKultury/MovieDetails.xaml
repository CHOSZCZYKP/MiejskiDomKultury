

<!-- MovieDetails.xaml -->
<Page x:Class="MiejskiDomKultury.MovieDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Movie Details">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" />
            <TextBlock Text="{Binding Description}" FontSize="16" Margin="0 0 0 20" TextWrapping="Wrap" />

            <TextBlock Text="Rok:" FontWeight="Bold" FontSize="18" />
            <TextBlock Text="{Binding Year}" FontSize="16" Margin="0 0 0 20" />
            <TextBlock Text="W rolach głównych:" FontWeight="Bold" FontSize="18" />
            <ItemsControl ItemsSource="{Binding ActorsNames}" Margin="0 0 0 20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="16" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="Gatunek:" FontWeight="Bold" FontSize="18" />
            <ItemsControl ItemsSource="{Binding Kinds}" Margin="0 0 0 20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="16" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
