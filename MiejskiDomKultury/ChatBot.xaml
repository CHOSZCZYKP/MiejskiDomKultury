<Page x:Class="MiejskiDomKultury.Views.ChatBot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:MiejskiDomKultury.ViewModel"
      Title="ChatBot">
    <Page.DataContext>
        <vm:ChatViewModel />
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />ro
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding Messages}" Grid.Row="0" Margin="0,0,0,10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" Width="300" />
            <Button Content="Wyślij" Command="{Binding SendMessageCommand}" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Page>
