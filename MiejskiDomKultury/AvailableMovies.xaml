<Page x:Class="MiejskiDomKultury.AvailableMovies"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AvailableMovies">

    <Grid Margin="10">
        <StackPanel>
            <TextBox Name="FilterTextBox" 
                     Width="300" 
                     Margin="0 0 0 10"
                     TextChanged="FilterTextBox_TextChanged"/>

            <ListBox ItemsSource="{Binding FilteredMovies}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0 5">
                            <TextBlock Text="{Binding Tytul}" Width="200" VerticalAlignment="Center"/>
                            <Button Content="Do szczegółów" 
                                    Margin="10 0 0 0"
                                    Click="MovieDetailsButton_Click"
                                    Tag="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>
