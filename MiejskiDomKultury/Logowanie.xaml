<Page x:Class="MiejskiDomKultury.Logowanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logowanie">

    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="{DynamicResource logowanie}" 
                   FontWeight="Bold" 
                   FontSize="30"  
                   Margin="30,50,30,10"
                   HorizontalAlignment="Center"/>

            <Grid Width="400" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                       Text="{DynamicResource emial}" 
                       FontSize="20"
                       VerticalAlignment="Center"
                       Padding="5" />
                <local:PlaceholderTextBox Grid.Column="1"
                                      Placeholder="login" 
                                      x:Name="TextBoxLogin" 
                                      FontSize="20" 
                                      Margin="5,0" 
                                      Padding="5" />
            </Grid>

            <Grid Width="400" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                       Text="{DynamicResource haslo}" 
                       FontSize="20"
                       VerticalAlignment="Center"
                       Padding="5" />
                <local:PlaceholderPasswordBox Grid.Column="1"
                                          Placeholder="haslo" 
                                          x:Name="PasswordBox" 
                                          FontSize="20" 
                                          Margin="5,0" 
                                          Padding="5" />
            </Grid>

            <Button Content="Zaloguj się" 
                Width="400" 
                FontSize="20" 
                Margin="5" 
                Padding="5" 
                Click="Login_Click"/>
        </StackPanel>
    </Grid>

</Page>
