<Page x:Class="MiejskiDomKultury.Rezerwacje"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rezerwacje">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <local:PlaceholderTextBox x:Name="PoleWyszukiwania" Grid.Column="0"
                  Placeholder="Wyszukaj sale..."
                  Margin="10"/>
            <Button x:Name="ButtonSzukajSali" Grid.Column="1"
            Content="Szukaj"
            Margin="10"
            Padding="10"
            Width="80" />
        </Grid>
        <DataGrid Grid.Row="1"
                  x:Name="DataGridSale"
                  Width="auto"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa" 
                                    Binding="{Binding Nazwa}" 
                                    IsReadOnly="True"
                                    Width="2*"/>
                <DataGridTextColumn Header="Ilość miejsc" 
                                    Binding="{Binding IloscMiejsc}" 
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Typ" 
                                    Binding="{Binding Typ}" 
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Cena za godzine" 
                                    Binding="{Binding CenaZaGodz_Wartosc}" 
                                    IsReadOnly="True"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="DataPoczatkowaTextBox"
                       Text="Data początkowa:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <DatePicker x:Name="DataPoczatkowa"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            <TextBlock x:Name="GodzinaTextBox"
                       Grid.Row="1"
                       Text="Godzina:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <TextBlock x:Name="IloscGodzinTextBox"
                       Grid.Row="2"
                       Text="Ilość godzin:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <CheckBox x:Name="CheckBoxCzyOkresowaRezerwacja"
                      Grid.Row="3"
                      Grid.ColumnSpan="2"
                      Content="Czy chcesz zarezerwować okreswo?"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="10"/>
            <TextBlock x:Name="DataKoncowaTextBox"
                       Grid.Row="4"
                       Text="Data końcowa:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <DatePicker x:Name="DataKoncowa"
                        Grid.Row="4"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            <TextBlock x:Name="DzienTygodniaTextBox"
                       Grid.Row="5"
                       Text="Dzień tygodnia:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <ComboBox x:Name="DniTygodniaCombobox"
                      Grid.Row="5"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="10"/>
            <TextBlock x:Name="InterwalTextBox"
                       Grid.Row="6"
                       Text="Interwal:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <TextBlock x:Name="WyborNiecyklicznyTextBox"
                       Grid.Row="7"
                       Text="Wybór nie cykliczny:"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <DatePicker x:Name="DatyNieCykliczne"
                        Grid.Row="7"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            <Button x:Name="ZarezerwujButton"
                    Content="Zarezerwuj"
                    Grid.Column="1"
                    Grid.Row="8"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Padding="10"/>
        </Grid>
    </Grid>
</Page>
