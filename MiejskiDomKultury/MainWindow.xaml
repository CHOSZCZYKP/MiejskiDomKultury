<Window x:Class="MiejskiDomKultury.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiejskiDomKultury"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="600" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock Text="Dom Kultury Ostrołęki"
                       x:Name="TitleText"
             FontSize="24"
             FontWeight="Bold"
             Width="auto"
             Margin="0 0 0 10"
             TextAlignment="Center"
             HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Rejestracja" 
                Content="Rejestracja" 
                Margin="5" 
                Padding="5" 
                Click="Rejestracja_Click" />
                <Button x:Name="Logowanie" 
                Content="Zaloguj" 
                Margin="5" 
                Padding="5" 
                Click="Logowanie_Click" />
            </StackPanel>
        </StackPanel>
        <Frame x:Name="Main" 
       Grid.Row="1" 
       NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
