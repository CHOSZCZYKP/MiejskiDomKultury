<Page x:Class="MiejskiDomKultury.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Payment">

    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="SummaryTextBlock" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       TextWrapping="Wrap" />
            <Button Content="Zapłać teraz" 
                    Width="200" 
                    Height="50" 
                    Margin="0,20,0,0" 
                    Background="#FF6200EE" 
                    Foreground="White" 
                    FontSize="16" 
                    Click="OnPayNowClicked" />
        </StackPanel>
    </Grid>
</Page>
