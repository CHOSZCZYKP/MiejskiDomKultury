<Page x:Class="MiejskiDomKultury.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="Rezeracja" Content="Rezerwacja" Width="150" Height="30" Margin="10" Click="Rezeracja_Click"/>
            <Button x:Name="Wypozyczalnia" Content="Wypożyczalnia" Width="150" Height="30" Margin="10" Click="Wypozyczalnia_Click"/>
        </StackPanel>
        <Border BorderThickness="2" BorderBrush="Red" Grid.Row="1" Margin="10">

            <TextBlock Text="Komunikaty i inne bajery" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>
        </Border>
    </Grid>
</Page>
