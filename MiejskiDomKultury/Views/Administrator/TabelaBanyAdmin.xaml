<Page x:Class="MiejskiDomKultury.Views.Administrator.TabelaBanyAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury.Views.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabelaBanyAdmin">

    <Grid>
        <DataGrid x:Name="DataGridUzytkownicy"
          Width="auto"
          Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imię"
                                    Binding="{Binding Imie}"
                                    Width="*" />
                <DataGridTextColumn Header="Nazwisko"
                                    Binding="{Binding Nazwisko}"
                                    Width="*" />
                <DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}"
                                    Width="*" />
                <DataGridTextColumn Header="Nazwa użytkownika"
                                    Binding="{Binding NazwaUzytkownika}"
                                    Width="1.1*" />
                <DataGridTextColumn Header="Data banu"
                                    Binding="{Binding Data}"
                                    Width="*" />
                <DataGridTextColumn Header="Długość"
                                    Binding="{Binding Dlugosc}"
                                    Width="0.5*" />
                <DataGridTextColumn Header="Przyczyna"
                                    Binding="{Binding Przyczyna}"
                                    Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
