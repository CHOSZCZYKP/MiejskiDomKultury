<Page x:Class="MiejskiDomKultury.Views.Administrator.WykresyStatystyk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury.Views.Administrator"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WykresyStatystyk">

    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="WykresKolowy"
                       Grid.Row="0"
                       Text="Wykres kołowy podział transakcji wg typu"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="5" />

            <lvc:PieChart Series="{Binding SeriesPie}"
                          Margin="10"
                          Grid.Row="1"
                          LegendPosition="Bottom"
                          Height="400"/>
            <TextBlock x:Name="WykresKolumnowy"
                       Grid.Row="3"
                       Text="Wykres kolumnowy najbardziej oblegana sala"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="5"/>
            <lvc:CartesianChart Series="{Binding SeriesColumn}"
                                YAxes="{Binding YAxis}"
                                XAxes="{Binding XAxis}"
                                Margin="10"
                                Grid.Row="4"
                                Height="400"/>
        </Grid>
    </ScrollViewer>
</Page>
