<Page x:Class="MiejskiDomKultury.Views.Administrator.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury.Views.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="News">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Tytuł ogłoszenia:" FontWeight="Bold" />
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="0,5,0,15" />

       

        <StackPanel Grid.Row="3">
            <TextBlock x:Name="DescriptionLabel" Text="Opis:" FontWeight="Bold" />
            <TextBox x:Name="DescriptionTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" />
        </StackPanel>
        <Button  Content="Stwórz z AI" Width="150" HorizontalAlignment="Left" Click="CreateWithAi" />
        <Button Grid.Row="4" Content="Utwórz ogłoszenie" Width="150" HorizontalAlignment="Left" Click="CreateAnnouncement_Click" />
    </Grid>
</Page>
