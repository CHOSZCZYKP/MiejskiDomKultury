<Page x:Class="MiejskiDomKultury.Views.Administrator.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury.Views.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="News">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <TextBlock Text="Tytuł ogłoszenia:" FontWeight="Bold" />
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="0,5,0,15" />

        <!-- Row 2 - Nowy przycisk -->
        <Button Grid.Row="2" 
                Content="Stwórz z AI" 
                Width="150" 
                HorizontalAlignment="Left" 
                Click="CreateWithAi" 
                Margin="0,0,0,10"/>

        <!-- Row 3 -->
        <StackPanel Grid.Row="3">
            <TextBlock x:Name="DescriptionLabel" 
                       Text="Opis:" 
                       FontWeight="Bold" />
            <TextBox x:Name="DescriptionTextBox" 
                     Height="100" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" />
        </StackPanel>

        <!-- Nowa sekcja dla zdjęcia -->
        <StackPanel Grid.Row="4" Margin="0,15,0,10">
            <TextBlock Text="Zdjęcie:" FontWeight="Bold"/>
            <Button Content="Wybierz zdjęcie..." 
                    Click="SelectImage_Click"
                    Margin="0,5,0,0"
                    Width="120"
                    HorizontalAlignment="Left"/>

            <Image x:Name="PreviewImage" 
                   MaxHeight="200"
                   Margin="0,10,0,0"
                   Stretch="Uniform"/>

            <TextBlock x:Name="FileNameText" 
                       Margin="0,5,0,0"
                       FontStyle="Italic"/>
        </StackPanel>

        <!-- Przyciski -->
        <Button Grid.Row="5" 
                Content="Stwórz z AI" 
                Width="150" 
                HorizontalAlignment="Left" 
                Click="CreateWithAi" 
                Margin="0,0,0,10"/>

        <Button Grid.Row="6" 
                Content="Utwórz ogłoszenie" 
                Width="150" 
                HorizontalAlignment="Left" 
                Click="CreateAnnouncement_Click" />
    </Grid>
</Page>