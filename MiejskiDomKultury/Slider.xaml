<UserControl x:Class="MiejskiDomKultury.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="550"
             Background="{DynamicResource BackgroundColor}">
    <StackPanel Margin="10">

        <!-- Dice Grid using ItemsControl -->
        <ItemsControl x:Name="DiceDisplay" Margin="0,0,0,10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2" Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Image Width="40" Height="40" Source="{Binding ImagePath}"/>
                        <CheckBox Content="Hold" IsChecked="{Binding IsHeld}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Roll" Width="100" Height="30" Margin="10" Click="Roll_Click"/>
            <TextBlock x:Name="VolumeText" FontSize="16" VerticalAlignment="Center" Text="Volume: 0"/>
            <Image Source="/Assets/volume-up.png" Width="24" Height="24" Margin="10,0"/>
        </StackPanel>
        <Button x:Name="MuteButton"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Click="MuteButton_Click"
                Background="Transparent"
                BorderThickness="0"
                Opacity="0"
                ToolTip="Mute"/>

    </StackPanel>
</UserControl>
