<Page x:Class="MiejskiDomKultury.WypozyczaniePrzedmiotow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WypozyczaniePrzedmiotow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="DataGridPrzedmioty"
          ItemsSource="{Binding PrzedmiotCollectionView}"
          SelectedItem="{Binding WybranyPrzedmiot, Mode=TwoWay}"
          MouseDoubleClick="DataGridPrzedmioty_MouseDoubleClick"
          Grid.Row="2"
          Width="auto"
          Margin="10"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa"
                    Binding="{Binding Nazwa}"
                    Width="2*" />
                <DataGridTextColumn Header="Stan"
                    Binding="{Binding Stan}"
                    Width="*" />
                <DataGridTextColumn Header="Typ"
                    Binding="{Binding Typ}"
                    Width="*" />
                <DataGridTextColumn Header="Cena za dobe"
                    Binding="{Binding CenaZaDobe_Wartosc}"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <ListBox x:Name="ListBoxPrzedmiotyZamowienie"
                     Margin="10">
                
            </ListBox>

            <TextBlock x:Name="DataWypozyczeniaTextBlock"
                       Grid.Row="1"
                       Text="Data:"
                       Margin="10,5,0,5" />
            <DatePicker x:Name="DataWypozyczeniaDatePicker"
                        Grid.Row="2"
                        Margin="10,5,10,5" />
            <Button x:Name="RezerwujPrzedmiotyButton"
                    Grid.Row="3"
                    Content="Zarezerwuj"
                    Margin="10"
                    Padding="10"
                    HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Page>
