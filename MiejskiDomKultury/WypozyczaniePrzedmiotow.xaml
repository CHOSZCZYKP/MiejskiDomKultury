<Page x:Class="MiejskiDomKultury.WypozyczaniePrzedmiotow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiejskiDomKultury"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WypozyczaniePrzedmiotow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="DataGridWypozyczeniePrzedmiotow"
                  Width="auto"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa"
                                    Binding="{Binding Nazwa}"
                                    Width="2*" />
                <DataGridTextColumn Header="Stan"
                                    Binding="{Binding Stan}"
                                    Width="*" />
                <DataGridTextColumn Header="Typ"
                                    Binding="{Binding Typ}"
                                    Width="*" />
                <DataGridTextColumn Header="Cena za dobe"
                                    Binding="{Binding CenaZaDobe_Wartość}"
                                    Width="*" />
                <DataGridTextColumn Header="Dostepność"
                                    Binding="{Binding Dostepnosc}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Top">
            <TextBlock x:Name="WypozyczeniaIlosc"
                       Text="Ilość:"
                       Margin="5,15,5,5" />

            <local:PlaceholderTextBox x:Name="IloscWypozyczeniaTextBox"
                                      Placeholder="Podaj ilość"
                                      Padding="5" />

            <Button x:Name="DodajDoZamowienia"
                    Content="Dodaj"
                    Margin="5"
                    Padding="5"
                    HorizontalAlignment="Right" />
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <ListBox x:Name="ListBoxPrzedmiotyZamowienie"
                     Margin="10">
                
            </ListBox>

            <TextBlock x:Name="DataWypozyczeniaTextBlock"
                       Grid.Row="1"
                       Text="Data:"
                       Margin="10,5,0,5" />
            <DatePicker x:Name="DataWypozyczeniaDatePicker"
                        Grid.Row="2"
                        Margin="10,5,10,5" />
            <Button x:Name="RezerwujPrzedmiotyButton"
                    Grid.Row="3"
                    Content="Zarezerwuj"
                    Margin="10"
                    Padding="10"
                    HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Page>
